<h6 class="mb-4">About Us</h6>
<form id="about_form">
    <div class="mb-3">
        <div class="container-fluid pt-4 px-4">
            <div class="row g-4">
                <div class="col-sm-12 col-xl-6">
                    <label for="introduction" class="col-form-label">Introduction</label>
                    <div class="col-sm-12">
                        <textarea class="form-control" name="introduction" id="introduction" cols="30" rows="10"><%= about.introduction %></textarea>
                    </div>
                </div>
                <div class="col-sm-12 col-xl-6">
                    <label for="thumbnail" class="col-form-label">Thumbnail</label>
                    <div class="col-sm-10">
                        <img src="/assets/media/website/<%= about.thumbnail %>" width="100%" height="100%" alt="thumbnail" id="thumbnail_preview">
                    </div>
                    <input type="file" name="image" id="thumbnail" hidden>
                    <button type="button" class="mt-5 col-sm-10 btn btn-info" id="btn_choose_thumbnail">Upload</button>
                </div>
                <div class="col-sm-12 col-xl-12">
                    <button type="submit" class="mt-3 col-sm-12 btn btn-success">Update</button>
                </div>
            </div>
        </div>

    </div>
</form>