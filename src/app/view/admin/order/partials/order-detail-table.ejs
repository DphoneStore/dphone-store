<table class="table table-hover" style="text-align: center;">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Image</th>
        <th scope="col">Brand</th>
        <th scope="col">quantity</th>
        <th scope="col">Total Price</th>
    </tr>
    </thead>
    <tbody>
    <% details.map((detail, index) => { %>
        <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= detail.product.name %></td>
            <td>
                <img src="/assets/media/product/<%= detail.product.images.length > 0 ? detail.product.images[0].filename : '' %>"
                     style="min-width: 1rem; max-width: 6rem" alt="">
            </td>
            <td><%= detail.product.brand.name %></td>
            <td><%= detail.quantity %></td>
            <td><span style="color: green">$</span><%= detail.price %></td>
        </tr>
    <% }) %>
    </tbody>
</table>
