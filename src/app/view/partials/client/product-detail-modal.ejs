                <table class="table table-bordered table-hover table-striped">
                    <tbody>
                    <tr>
                        <th scope="row">Screen size</th>
                        <td><%= screen.screen_size %></td>
                    </tr>
                    <tr>
                        <th scope="row">Screen Technical</th>
                        <td><%= screen.screen_tech %></td>
                    </tr>
                    <tr>
                        <th scope="row">Screen Resolution</th>
                        <td><%= screen.screen_resolution %></td>
                    </tr>
                    <tr>
                        <th scope="row">Scan Frequency</th>
                        <td><%= screen.scan_frequency %></td>
                    </tr>
                    <tr>
                        <th scope="row">Screen Type</th>
                        <td><%= screen.screen_type %></td>
                    </tr>
                    </tbody>
                </table>
                <h2 class="title-product-detail">Back Camera</h2>
                <table class="table table-bordered table-hover table-striped">
                    <tbody>
                    <tr>
                        <th scope="row">Back Camera</th>
                        <td><%= camera.back_camera %></td>
                    </tr>
                    <tr>
                        <th scope="row">Back Video</th>
                        <td><%= camera.back_video %></td>
                    </tr>
                    </tbody>
                </table>
                <h2 class="title-product-detail">Front Camera</h2>
                <table class="table table-bordered table-hover table-striped">
                    <tbody>
                    <tr>
                        <th scope="row">Front Camera</th>
                        <td><%= camera.front_camera %></td>
                    </tr>
                    <tr>
                        <th scope="row">Front Video</th>
                        <td><%= camera.front_video %></td>
                    </tr>
                    </tbody>
                </table>
                <h2 class="title-product-detail">Processor & graphics</h2>
                <table class="table table-bordered table-hover table-striped">
                    <tbody>
                    <tr>
                        <th scope="row">Chipset</th>
                        <td><%= processor_graphics.chipset %></td>
                    </tr>
                    <tr>
                        <th scope="row">CPU Type</th>
                        <td><%= processor_graphics.cpu %></td>
                    </tr>
                    <tr>
                        <th scope="row">GPU</th>
                        <td><%= processor_graphics.gpu %></td>
                    </tr>
                    </tbody>
                </table>
                <h2 class="title-product-detail">RAM & Storage</h2>
                <table class="table table-bordered table-hover table-striped">
