                    </tr>
                    <tr>
                        <th scope="row">Internal Memory</th>
                        <td><%= ram_storage.internal_memory %></td>
                    </tr>
                    <tr>
                        <th scope="row">Memory Card Slot</th>
                        <td><%= ram_storage.memory_card_slot %></td>
                    </tr>
                    </tbody>
                </table>
                <h2 class="title-product-detail">Battery & charging technology</h2>
                <table class="table table-bordered table-hover table-striped">
                    <tbody>
                    <tr>
                        <th scope="row">Pin</th>
                        <td><%= battery.pin %></td>
                    </tr>
                    <tr>
                        <th scope="row">Charging Technology</th>
                        <td><%= battery.charging_tech %></td>
                    </tr>
                    <tr>
                        <th scope="row">Charging Port</th>
                        <td><%= battery.charging_port %></td>
                    </tr>
                    </tbody>
                </table>
                <h2 class="title-product-detail">Communicate & Connect</h2>
                <table class="table table-bordered table-hover table-striped">
                    <tbody>
                    <tr>
                        <th scope="row">SIM Card</th>
                        <td><%= communicate_connect.sim %></td>
                    </tr>
                    <tr>
                        <th scope="row">Operating System</th>
                        <td><%= communicate_connect.operating %></td>
                    </tr>
                    <tr>
                        <th scope="row">Infrared</th>
