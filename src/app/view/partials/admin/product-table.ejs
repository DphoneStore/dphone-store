<table class="table table-hover" style="text-align: center;">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Image</th>
        <th scope="col">Brand</th>
        <th scope="col">Price</th>
        <th scope="col">Stock</th>
        <th scope="col">Rating</th>
        <th scope="col">Release Date</th>
        <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    <% product_list.map((product, index) => { %>
        <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= product.name %></td>
            <td>
                <img src="/assets/media/product/<%= product.images.length > 0 ? product.images[0].filename : '' %>"
                     style="min-width: 1rem; max-width: 6rem" alt="">
            </td>
            <td><%= product.brand.name %></td>
            <td>
                <% if(product.is_discount) { %>
                    <s><span style="color: green;">$</span><%= product.price %></s>
                    <br>
                    <span>-<%= product.discount %>%</span>
                    <br>
                    <span style="color: green;">$</span><%= product.price - (product.price * (product.discount / 100)) %>
                <% } else { %>
                    <span style="color: green">$</span><%= product.price %>
                <% } %>
            </td>
            <td><%= product.stock %></td>
            <td>
                <%= product.rating %>
                <i class="fa-solid fa-star" style="color: yellow"></i>
            </td>
            <td><%= product.release_date %></td>
            <td style="vertical-align: middle;">
                <div class="btn-group-vertical" role="group">
                    <button type="button" class="btn btn-info btn-see-product-detail" data-product-id="<%= product._id %>">
                        <i class="fa-solid fa-circle-info me-2"></i>
                        Detail
                    </button>
                    <button type="button" class="btn btn-warning btn-edit-product" data-product-id="<%= product._id %>">
                        <i class="fa-solid fa-pen me-2"></i>
                        Edit
                    </button>
                    <button type="button" class="btn btn-primary btn-delete-product" data-product-id="<%= product._id %>">
                        <i class="fa-solid fa-trash me-2"></i>
                        Delete
                    </button>
                </div>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>
